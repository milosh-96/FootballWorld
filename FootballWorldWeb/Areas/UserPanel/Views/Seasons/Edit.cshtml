@model SeasonFormViewModel
<div class="row">
    <div class="col">
        <form enctype="multipart/form-data"
              asp-area="UserPanel"
              asp-controller="Seasons"
              asp-action="Edit"
              method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label class="label" asp-for="Name">
                    Name
                </label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <select class="form-control" asp-for="StartYear" asp-items="@Model.StartYears"></select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <select class="form-control" asp-for="EndYear" asp-items="@Model.EndYears"></select>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary">
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </form>
        <hr />
        <form asp-area="UserPanel" onsubmit="return confirm('Are you sure?')"
              asp-controller="Seasons"
              asp-action="Delete"
              asp-route-id="@Model.Id"
              method="post">
            <button type="submit" class="btn btn-danger">
                Delete
            </button>
        </form>
    </div>
</div>