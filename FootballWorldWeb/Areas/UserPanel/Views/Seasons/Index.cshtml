@model List<Season>

<div class="row">
    <div class="col">
        <div class="text-left">
            <a asp-action="Create" class="btn btn-xs btn-outline-primary">Add New</a>
        </div>
        <div class="mt-4">
            <h3>Seasons</h3>
        </div>

        <ul class="list-group">
            @foreach (var season in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-8">
                            @season.Name
                        </div>
                        <div class="col">
                            <a asp-action="Edit" asp-route-id="@season.Id">Edit</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>