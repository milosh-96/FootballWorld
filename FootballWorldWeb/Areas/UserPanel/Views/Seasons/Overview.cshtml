@model SeasonOverviewViewModel
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h2>Season overview - @Model.Season.Name (@Model.Season.Competition.Name)</h2>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3>Groups</h3>
                    @if (Model.Season.Groups.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var group in Model.Season.Groups.Where(x=>x.GroupType==GroupType.League).ToList())
                            {
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col">
                                            <form asp-action="Delete" asp-controller="Groups" asp-area="UserPanel" asp-route-id="@group.Id" method="post">
                                                <button class="btn btn-danger btn-xs">
                                                    X
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col">
                                            @group.Name
                                        </div>
                                        <div class="col">
                                            <ul class="list-group">
                                                <li class="list-group-item py-0">
                                                    <a asp-controller="Groups" asp-action="Edit" asp-route-id="@group.Id">
                                                        Edit
                                                    </a>
                                                </li>
                                                <li class="list-group-item py-0">
                                                    <a asp-controller="Matches" asp-action="Index" asp-route-groupId="@group.Id">
                                                        List Matches
                                                    </a>
                                                </li>
                                                <li class="list-group-item py-0">
                                                    <a asp-controller="Groups" asp-action="ManageTeams" asp-route-id="@group.Id">
                                                        Manage Teams
                                                    </a>
                                                </li>
                                                <li class="list-group-item py-0">
                                                    <form 
                                                          asp-controller="Standings"
                                                          asp-action="Update"
                                                          asp-route-groupId="@group.Id"
                                                          method="post">
                                                        <button class="btn btn-primary">Update Standings</button>
                                                    </form>
                                                </li>
                                            </ul>
                                            
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                <a asp-controller="Groups" asp-action="Create" asp-route-seasonId="@Model.Season.Id" class="btn btn-primary w-100">Add</a>
                    </div>
                <div class="col">
                    <h3>Knockout / Playoffs</h3>

                    @if (Model.Season.Groups.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var group in Model.Season.Groups.Where(x => x.GroupType == GroupType.Knockout).ToList())
                            {
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col">
                                            <form asp-action="Delete" asp-controller="Groups" asp-area="UserPanel" asp-route-id="@group.Id" method="post">
                                                <button class="btn btn-danger btn-xs">
                                                    X
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col">
                                            @group.Name
                                        </div>
                                        <div class="col">
                                            <ul class="list-group">
                                                <li class="list-group-item py-0">
                                                    <a asp-controller="Groups" asp-action="Edit" asp-route-id="@group.Id">
                                                        Edit
                                                    </a>
                                                </li>
                                                <li class="list-group-item py-0">
                                                    <a asp-controller="Matches" asp-action="Index" asp-route-groupId="@group.Id">
                                                        List Matches
                                                    </a>
                                                </li>
                                                <li class="list-group-item py-0">
                                                    <a asp-controller="Groups" asp-action="ManageTeams" asp-route-id="@group.Id">
                                                        Manage Teams
                                                    </a>
                                                </li>
                                              
                                            </ul>

                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    <a asp-controller="Groups" asp-action="Create" asp-route-seasonId="@Model.Season.Id" class="btn btn-primary w-100">Add</a>

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3>Teams (all)</h3>
                    @if (Model.Teams.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var team in Model.Teams)
                            {
                                <li class="list-group-item">@team.Name</li>
                            }
                        </ul>
                    }
                </div>
                <div class="col">
                    <h3>Matches (all)</h3>
                    @if (Model.Matches.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var match in Model.Matches)
                            {
                                <li class="list-group-item">@match.Id</li>
                            }
                        </ul>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                <h3>Lists</h3>
                @if (Model.Season.Groups.Count > 0)
                {
                    <ul class="list-group">
                        @foreach (var group in Model.Season.Groups.Where(x => x.GroupType == GroupType.TeamsList).ToList())
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col">
                                        <form asp-action="Delete" asp-controller="Groups" asp-area="UserPanel" asp-route-id="@group.Id" method="post">
                                            <button class="btn btn-danger btn-xs">
                                                X
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col">
                                        @group.Name
                                    </div>
                                    <div class="col">
                                        <ul class="list-group">
                                            <li class="list-group-item py-0">
                                                <a asp-controller="Groups" asp-action="Edit" asp-route-id="@group.Id">
                                                    Edit
                                                </a>
                                            </li>
                                          
                                            <li class="list-group-item py-0">
                                                <a asp-controller="Groups" asp-action="ManageTeams" asp-route-id="@group.Id">
                                                    Manage Teams
                                                </a>
                                            </li>
                                            <li class="list-group-item py-0">
                                                <form asp-controller="Standings"
                                                      asp-action="Update"
                                                      asp-route-groupId="@group.Id"
                                                      method="post">
                                                    <button class="btn btn-primary">Update Standings</button>
                                                </form>
                                            </li>
                                        </ul>

                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                }
                <a asp-controller="Groups" asp-action="Create" asp-route-seasonId="@Model.Season.Id" class="btn btn-primary w-100">Add</a>
            </div>            </div>
        </div>
    </div>