@model TeamsIndexViewModel

<div class="row">
    <div class="col">
        <div class="text-left">
            <a asp-action="Create" class="btn btn-xs btn-outline-secondary">Add New</a>
            <a asp-action="Import" class="btn btn-xs btn-outline-secondary">Import</a>
        </div>
        <div class="mt-4">
            <h3>Teams</h3>
        </div>
        <div>

            <form asp-action="Index" method="get">
                Show Only:
                <div class="form-group d-inline-block">
                    <label class="label">
                        All
                        <input type="radio" value="all" asp-for="FilterBy" />
                    </label>
                </div>
                <div class="form-group d-inline-block">
                    <label class="label">
                        Clubs
                        <input type="radio" value="@TeamType.Club" asp-for="FilterBy" />
                    </label>
                </div>
                <div class="form-group d-inline-block">
                    <label class="label">
                        National
                        <input type="radio" value="@TeamType.NationalTeam" asp-for="FilterBy" />
                    </label>
                </div>
                <div class="form-group d-inline-block">
                    <button type="submit" class="btn btn-xs btn-outline-secondary">Apply</button>
                </div>
            </form>
        </div>
        <div>
            <em>
                <small>Total: @Model.Teams.Count</small>
            </em>
        </div>
        <ul class="list-group">
            @foreach(var team in Model.Teams)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-8">
                            @team.Name
                        </div>
                        <div class="col">
                            <a asp-action="Edit" asp-route-id="@team.Id">Edit</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>