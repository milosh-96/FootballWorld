@model MatchFormViewModel
    <div class="row">
        <div class="col">
            <form asp-area="UserPanel" asp-controller="Matches" asp-action="Create" method="post">
                <input type="hidden" asp-for="GroupId" />
                       
                       <div class="row">
                    <div class="col">

                        <select class="form-control" asp-for="HomeResult.Team.Id" asp-items="@Model.HomeTeamSelect">
                        </select>
                        <hr />
                        <div class="form-group">
                            <input asp-for="@Model.HomeResult.Score" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <select class="form-control" asp-for="AwayResult.Team.Id" asp-items="@Model.AwayTeamSelect">
                        </select>
                        <hr />
                        <div class="form-group">
                            <input asp-for="@Model.AwayResult.Score" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group" id="dateTimePicker">
                            <input id="matchStart" type="datetime" asp-for="Start" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="Finished">
                                Finished:
                                <input type="checkbox" asp-for="Finished" />
                            </label>
                        </div>
                    </div>
                </div>
               
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" asp-route-groupId="@Model.GroupId" class="btn btn-outline-secondary">Back</a>
                    </div>
                   
                </div>
            </form>
        </div>
    </div> 

@section Scripts {
    <script>

        $(document).ready(function () {
            $("#matchStart").flatpickr({
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        })
    </script>
}