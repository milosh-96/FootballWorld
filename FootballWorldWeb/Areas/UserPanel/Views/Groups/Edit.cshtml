@model GroupFormViewModel
<div class="row">
    <div class="col">
        <div class="row">
            <div class="col">
                <a asp-controller="Seasons" asp-action="Overview" asp-route-id="@Model.SeasonId">Back</a>
                <hr />
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <form asp-area="UserPanel" asp-controller="Groups" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label>Group Name</label>
                        <input class="form-control" type="text" asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label>Type</label>
                        <select class="form-control" asp-items="@Model.GroupTypeSelect" asp-for="GroupTypeValue">
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Order No</label>
                        <input class="form-control w-25" type="number" asp-for="Order" />
                    </div>
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-primary w-100">Save</button>
                        </div>
                        <div class="col">
                            <a asp-action="Create" asp-route-seasonId="@Model.SeasonId" class="btn btn-outline-secondary ">Add New</a>
                        </div>
                    </div>
                </form>

            </div>
            <div class="col-md-2">
                <a asp-action="ManageTeams" asp-route-id="@Model.Id">Manage Teams </a>
            </div>
        </div>
    </div>
</div>