@model GroupFormViewModel
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    @ViewData["Title"]
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <form asp-area="UserPanel" asp-controller="Groups" asp-action="Create" method="post">
                        <input type="hidden" asp-for="SeasonId" />
                        <div class="form-group">
                            <label>Group Name</label>
                            <input class="form-control" type="text" asp-for="Name"  />
                        </div>
                        <div class="form-group">
                            <label>Type</label>
                            <select class="form-control" asp-items="@Model.GroupTypeSelect" asp-for="GroupTypeValue">
                            </select>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-primary w-100">Create</button>
                            </div>
                            <div class="col">
                                <a asp-action="Create" class="btn btn-secondary">Add New</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>