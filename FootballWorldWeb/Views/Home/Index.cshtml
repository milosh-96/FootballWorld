@model IndexViewModel


<div class="row">
    <div class="col-md-9">
        <div>
            <div class="section-heading">
                <h3>Featured</h3>
            </div>
            <div class="row">
                @foreach (var competition in Model.Competitions)
                {
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="@LinkHandler.MakeFootballImageLink(competition.CompetitionLogo,"competitions")" style="object-fit:contain" width="100%" height="100px" alt="@competition.Name" />
                            </div>
                            <div class="col-md-9">
                                <h3>
                                    <a asp-action="Overview" asp-controller="Competitions"
                                       asp-route-id="@competition.Id"
                                       asp-route-slug="@competition.Slug">
                                        @competition.Name
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
    <div class="col-md-3">
        <div class="section-heading">
            <h3>Ads</h3>
        </div>
    </div>
</div>
<div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h3>
                        Other Sites
                    </h3>
                </div>
             </div>
        </div>
